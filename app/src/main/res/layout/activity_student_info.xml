<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/groupStylegray_101">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/imageArrowOne"
        android:layout_width="63dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/img_arrowy" />

    <ImageView
        android:layout_width="121dp"
        android:layout_height="83dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="420dp"
        android:src="@drawable/img_bottomleft"/>

    <ImageView
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="615dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="420dp"
        android:src="@drawable/img_bottomright" />

    <ImageView
        android:layout_width="117dp"
        android:layout_height="61dp"
        android:layout_marginStart="615dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="420dp"
        android:src="@drawable/img_logo"/>

    <EditText
        android:id="@+id/stdId"
        style="@style/etSolid"
        android:layout_width="291dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top|start"
        android:layout_marginStart="80dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="@dimen/_86pxh"
        android:layout_marginBottom="298dp"
        android:background="@drawable/rectangle_bg_white_a700"
        android:drawableStart="@drawable/img_user"
        android:drawablePadding="9dp"
        android:ellipsize="end"
        android:hint="student ID"
        android:paddingStart="@dimen/_8pxh"
        android:paddingTop="@dimen/_3pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_5pxv"
        android:singleLine="true"
        android:textColorHint="@color/gray_500" />

    <TextView
        android:id="@+id/firstname"
        android:layout_width="210dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="120dp"
        android:text="FIRST NAME"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/FIRSTNAME"
        style="@style/etSolid"
        android:layout_width="292dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top|start"
        android:layout_marginStart="79dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="@dimen/_86pxh"
        android:layout_marginBottom="167dp"
        android:background="@drawable/rectangle_bg_white_a700"
        android:drawableStart="@drawable/img_user"
        android:drawablePadding="9dp"
        android:ellipsize="end"
        android:hint="first name"
        android:paddingStart="@dimen/_8pxh"
        android:paddingTop="@dimen/_3pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_5pxv"
        android:singleLine="true"
        android:textColorHint="@color/gray_500" />

    <TextView
        android:layout_width="213dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="249dp"
        android:text="LAST NAME"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/LASTNAME"
        android:layout_width="286dp"
        android:layout_height="82dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top|start"
        android:layout_marginStart="83dp"
        android:layout_marginTop="273dp"
        android:layout_marginEnd="@dimen/_86pxh"
        android:layout_marginBottom="56dp"
        android:background="@drawable/rectangle_bg_white_a700"
        android:drawableStart="@drawable/img_user"
        android:drawablePadding="9dp"
        android:ellipsize="end"
        android:hint="last name"
        android:paddingStart="@dimen/_8pxh"
        android:paddingTop="@dimen/_3pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_5pxv"
        android:singleLine="true"
        android:textColorHint="@color/gray_500" />

    <TextView
        android:id="@+id/DATEOFBIRTH"
        android:layout_width="235dp"
        android:layout_height="47dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="333dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="DATE OF BIRTH"
        android:textSize="30sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/date"
        style="@style/etSolid"
        android:layout_width="294dp"
        android:text="SELECT THE DATE"
        android:textColor="@color/black"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top|start"
        android:layout_marginStart="385dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="@dimen/_86pxh"
        android:layout_marginBottom="248dp"
        android:background="#E1DDDD"

        android:drawablePadding="9dp"
        android:hint="Select the Date"
        android:paddingStart="@dimen/_8pxh"
        android:paddingTop="@dimen/_3pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_5pxv"
        android:singleLine="true"
        android:textColorHint="@color/gray_500" />

    <TextView
        android:layout_width="233dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="399dp"
        android:layout_marginTop="183dp"
        android:text="GENDER"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="309dp"
        android:layout_height="133dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="67dp">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="166dp"
            android:layout_height="58dp"
            android:layout_marginEnd="187dp"
            android:layout_marginBottom="144dp"
            android:text="Male"
            android:textSize="16sp"></RadioButton>

        <RadioButton
            android:id="@+id/female"
            android:layout_width="167dp"
            android:layout_height="59dp"
            android:layout_marginTop="-145dp"
            android:layout_marginEnd="197dp"
            android:layout_marginBottom="164dp"
            android:text="Female"
            android:textSize="16sp"></RadioButton>

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
        style="@style/btnSolid"
        android:layout_width="186dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_62pxv"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingStart="@dimen/_30pxh"
        android:paddingTop="@dimen/_11pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_11pxv"
        android:singleLine="true"
        android:text="@string/lbl_add"
        android:textAllCaps="false" />

</RelativeLayout>
