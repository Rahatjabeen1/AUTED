<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    style="@style/groupStylegray_101">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="125dp"
        android:layout_marginStart="-18dp"
        android:src="@drawable/img_topleft"/>
    <ImageView
        android:layout_width="121dp"
        android:layout_height="93dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="350dp"
        android:src="@drawable/img_bottomleft"/>


    <ImageView
        android:layout_width="132dp"
        android:layout_height="225dp"
        android:layout_marginStart="620dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="420dp"
        android:src="@drawable/img_bottomright" />

    <ImageView
        android:layout_width="116dp"
        android:layout_height="96dp"
        android:layout_marginStart="615dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="420dp"
        android:src="@drawable/img_topright" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="103dp"
        android:layout_marginStart="315dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="420dp"
        android:src="@drawable/img_logo"/>

    <ImageView
        android:layout_width="205dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="315dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="125dp"
        android:src="@drawable/img_or"></ImageView>

    <TextView
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="72dp"
        android:text="EMAIL"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email"
        style="@style/etSolid"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="top|start"
        android:layout_marginStart="44dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="423dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/rectangle_bg_white_a700"
        android:drawableStart="@drawable/img_vector"
        android:drawablePadding="@dimen/_7pxh"
        android:ellipsize="end"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/_8pxh"
        android:paddingTop="@dimen/_3pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_5pxv"
        android:singleLine="true"
        android:textColorHint="@color/gray_500" />

    <TextView
        android:layout_width="318dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="187dp"
        android:text="PASSWORD"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/PASSWORD"
        style="@style/etSolid"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top|start"
        android:layout_marginStart="37dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="428dp"
        android:layout_marginBottom="147dp"
        android:background="@drawable/rectangle_bg_white_a700"
        android:drawableStart="@drawable/img_lock"
        android:drawablePadding="@dimen/_7pxh"
        android:drawableTint="#FFA9A8"
        android:ellipsize="end"
        android:hint="password"
        android:paddingStart="@dimen/_8pxh"
        android:paddingTop="@dimen/_3pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_5pxv"
        android:singleLine="true"
        android:textColorHint="@color/gray_500" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="298dp"
        android:layout_marginTop="269dp"
        android:layout_marginBottom="202dp"
        android:text="FORGOT PASSWORD?"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginbtn"
        style="@style/btnSolid_1"
        android:layout_width="220dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="top|end"
        android:layout_marginStart="143dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="368dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:paddingStart="@dimen/_30pxh"
        android:paddingTop="@dimen/_11pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_11pxv"
        android:singleLine="true"
        android:text="@string/lbl_login"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startedBtn"
        style="@style/btnSolid"
        android:layout_width="230dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="486dp"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="@dimen/_30pxh"
        android:paddingTop="@dimen/_11pxv"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingBottom="@dimen/_11pxv"
        android:singleLine="true"
        android:text="@string/lbl_get_started"
        android:textAllCaps="false" />
</RelativeLayout>